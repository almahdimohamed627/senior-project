    echo "ðŸ§ª Running tests for ai-model"
    // Add your test logic here
}

def cleanup() {
    echo "ðŸ§¹ Cleaning up ai-model resources"
    sh '''
        docker compose down --remove-orphans --rmi all 2>/dev/null || true
        docker rmi -f ai-model-app 2>/dev/null || true
    '''
}

// Return this library
return this
